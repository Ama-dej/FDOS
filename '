; AH = 0x16
; SI = Source file.
; DI = Destination file.
COPY_FILE_INT:
	MOV AX, DI

	MOV BX, DOS_SEGMENT
	MOV ES, BX 
	MOV BX, DATA_BUFFER
	MOV DI, .SOURCE_FILENAME
	CALL CONVERT_LE_AND_TRAVERSE
	; JZ .EXIT
	JC .ERROR

	MOV CX, DS
	MOV DX, ES
	MOV DS, DX

	MOV SI, DI ; Source filename.
	CALL FIND_ENTRY
	; JC .NOT_FOUND_ERROR

.EXIT:
        JMP RET_CODE_INT

.NOT_FOUND_ERROR:
	MOV DH, 0x43

.ERROR:
	MOV BYTE[INT_RET_CODE], DH
	JMP RET_CODE_INT

.SOURCE_FILENAME: TIMES 11 DB 0
.SOURCE_ATTRIBUTES: DB 0
.SOURCE_FIRST_CLUSTER: DW 0
